@model IEnumerable<Vidly.Models.Movie>

@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    @Scripts.Render("~/bundles/movies")

    <title>Movies</title>
    <style>
        .row {
            padding-top: 2%;
            padding-bottom: 2%;
            padding-left: 20%;
            padding-right: 20%;
        }
        .grow { 
            transition: all .2s ease-in-out; 
        }

        .grow:hover { 
            transform: scale(1.3); 
        }
        .modal-open {
            overflow-y: auto
        }
    </style>
</head>

<body>


    <h2>Movies</h2>
    <div id="container">
        <!--Card container-->
    </div>

<!-- Modal -->
    <div class="modal fade" id="cartModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>

                    <button type="button" class="close" id="closeCartButton" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>

                </div>
                <div class="modal-body">
                    <ul class="list-group" id="cartList">
                        <!--movies go here-->
                    </ul>
                </div>
                <div class="modal-footer">
                    <p id="total" style="float:left"></p>
                    <form id="cartForm" action="../Orders/NewOrder" onsubmit="return validateForm()" method="get" required>
                        <input type="submit" value="Coninue to Payment">
                    </form>
                </div>
            </div>
        </div>
    </div>

<!-- Button trigger modal -->
</body>